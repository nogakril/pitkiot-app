<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WaitingRoomFragment"
        android:background="@color/light_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/GameBigWindowStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    <TextView
            android:id="@+id/admin_waiting_room_title"
            android:text="@string/admin_waiting_room_title"
            style="@style/GameLargeTitleStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/game_pin_title"
            android:text="@string/game_pin_title"
            style="@style/GameMediumTitleStyle"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin_waiting_room_title"
            app:layout_constraintVertical_bias="0.298" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/players_list_recycler_view"
            style="@style/PlayersListRecyclerViewStyle"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/start_creating_pitkiot_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_pin_title"
            app:spanCount="2"/>

    <Button
            android:id="@+id/start_creating_pitkiot_btn"
            android:text="@string/start_creating_pitkiot_btn"
            style="@style/GameButtonStyle"
            android:visibility="gone"
            app:backgroundTint="@null"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>