<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PitkiotTitle">
        <item name="android:fontFamily">@font/titan_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PitkiotSubtitle">
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PitkiotPlainText">
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PitkiotSmallPlainText">
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PitkiotButton">
        <item name="android:fontFamily">"sans-serif-black"</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <!-- Add other text attributes as needed -->
    </style>


    //new design
    <style name="GameTitle">
        <item name="android:fontFamily">@font/titan_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">@color/grey</item>
    </style>

    <style name="GameButtonTextStyle">
        <item name="android:fontFamily">@font/titan_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">@color/grey</item>

    </style>

    <style name="GameButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/buttom_animation</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAppearance">@style/GameButtonTextStyle</item>
        <item name="android:paddingBottom">15dp</item>

    </style>
</resources>